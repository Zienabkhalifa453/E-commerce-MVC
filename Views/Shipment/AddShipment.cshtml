@model E_commerce_MVC.viewModels.ShipmentViewModel

@{
    ViewData["Title"] = "AddShipment";
}
    
 <style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }
       
    .card {
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .card-header {
        background-color: #9F78FF;
        color: #fff;
        border-radius: 15px 15px 0 0;
    }
    .card-body {
        padding: 20px;
    }

    .btn {
        background-color: #9F78FF;
        border-color: #9F78FF;
        color: #fff;
    }

    .btn:hover {
        background-color: #9F78FF;
        border-color: #9F78FF;
        color: #fff;
    }

    .shipment-image {
        width: 100%; 
        height: auto; 
            
    }

    .big-label {
        font-size: 18px;
    }

    .custom-input {
        height: 40px;        
        padding: 10px;
    }
</style> 

<div class="container" style="margin-bottom: 150px;">
    <h1>Shipping details</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 style="display:inline; color:#fff">Welcome, @ViewData["Username"] ! </h1>
                    <p style="display:inline; float: right; color:#fff">@ViewData["Email"]</p>
                </div>

                <div class="card-body">
                    <form asp-action="AddShipment">
                        <div class="form-row">
                            <div class="col-md-12">
                            <label asp-for="Date" class="form-label big-label">Date <span class="text-danger">*</span></label>
                                <input asp-for="Date" class="form-control custom-input form-control-lg big-label" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                                <br />
                        </div>
                      
                            <div class="col-md-12">
                            <label asp-for="Address" class="form-label big-label">Address <span class="text-danger">*</span></label>
                                <input asp-for="Address" class="form-control custom-input big-label" placeholder="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                                <br />
                        </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="City" class="form-label big-label">City <span class="text-danger">*</span></label>
                                <input asp-for="City" class="form-control custom-input form-control-lg big-label" placeholder="City" />
                                <span asp-validation-for="City" class="text-danger"></span>
                                <br />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="State" class="form-label big-label">State <span class="text-danger">*</span></label>
                                <select asp-for="State" class="form-select  big-label">
                                    <option selected>Choose...</option> 
                                    <option value="California">California</option>
                                    <option value="Texas">Texas</option>
                                    <option value="New York">New York</option>
                                </select>
                                <span asp-validation-for="State" class="text-danger"></span>
                                <br />
                            </div>
                        </div>

                        <div class="form-row">


                            <div class="form-group col-md-8">
                            <label asp-for="Country" class="form-label big-label">Country <span class="text-danger">*</span></label>
                                <input asp-for="Country" class="form-control custom-input form-control-lg big-label" placeholder="Country" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                                <br />
                        </div>

                            <div class="form-group col-md-4">
                            <label asp-for="Zip_Code" class="form-label big-label">Zip Code <span class="text-danger">*</span></label>
                                <input asp-for="Zip_Code" class="form-control custom-input form-control-lg big-label" placeholder="Zip Code" />
                            <span asp-validation-for="Zip_Code" class="text-danger"></span>
                                <br />
                        </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Create</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <img src="/img/gallery/shipment.png" class="img-fluid" alt="Shipment Image">
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.min.js" integrity="sha512-EKWWs1ZcA2ZY9lbLISPz8aGR2+L7JVYqBAYTq5AXgBkSjRSuQEGqWx8R1zAX16KdXPaCjOCaKE8MCpU0wcHlHA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
