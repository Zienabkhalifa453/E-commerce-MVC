@model List<Shipment>

@{
   
    var users = ViewData["Users"] as List<ApplicationUser>;
    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];

}

<style>
    .page-item.active .page-link{
        z-index: 1;
        color: #fff;
        background-color: #9F78FF;
        border-color: #9F78FF;
    }

    .page-link{
        color: #9F78FF;
    }
        
</style>



<div class="container" style="margin-bottom: 150px;">
    <table class="table table-hover table-bordered  table table-striped">
        <thead class="dark-green">
            <tr>
               
                <th scope="col">Shipment Id</th>
                <th scope="col">Customer Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Date</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Country</th>
                <th scope="col">Zip_Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Shipment item in Model)
            {
                <tr>
                   
                    <td>@item.Id</td>
                    <td>@item.Customer_Id</td>
                    <td>@item.customer.UserName</td>
                    @* <td>@users?.FirstOrDefault(u => u.Id == item.Customer_Id)?.UserName</td> *@
                    <td>@item.customer.NormalizedEmail</td>
                    <td>@item.Date</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.Country</td>
                    <td>@item.Zip_Code</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="d-flex justify-content-center" >
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a style="padding:12px" class="page-link " href="@Url.Action("Index", "Shipment", new { page = i }) ">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>