@model E_commerce_MVC.viewModels.PaymentViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "AddPayment";
}
@* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
 *@ 
<style>
    .payment-image {
        width: 400px;
        height: 60px;
        margin-left: 15px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn {
        background-color: #9F78FF;
        border-color: #9F78FF;
        color: #fff;
    }

    .btn:hover {
        background-color: #9F78FF;
        border-color: #9F78FF;
        color: #fff;
    }

    .big-label {
        font-size: 18px;
    }

    .custom-input {
        height: 40px;
        padding: 10px;
    }

</style>

<div class="container" style="margin-bottom: 270px;">
  
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header" style="background-color: #9F78FF; color: #fff;">
                    <h1 class="text-center" style="color:#fff">Payment</h1>
                </div>

                <div class="card-body">
                    <form asp-action="AddPayment">

                        <div class="form-group" style="font-size:18px">
                            <label class="control-label">Select Payment Method :</label>
                          
                            <div>
                                <div class="radio-inline" style="font-size:18px">
                                    <input type="radio" asp-for="Method" value="Credit" id="cred"> 
                                    <label for="cred">Credit</label>
                                    <img src="/img/gallery/creditcards.png" class="payment-image" />
                                </div>
                                <br />
                                <div class="radio-inline" style="font-size:18px">
                                    <input type="radio" asp-for="Method" value="Paypal" id="pay"> 
                                    <label for="pay">Paypal</label>
                                    <img src="/img/gallery/paypal.png" class="" style="width:150px; height:50px; margin-left:15px" />
                                </div>
                            </div>
                            <span asp-validation-for="Method" class="text-danger"></span>
                            <br />
                            <div class="row">
                                <div class="form-group big-label col-md-8" style="display: flex; justify-content: space-between; align-items: center;">
                                    <label asp-for="Amount" class="control-label" style="margin-right: 15px;">Amount</label>
                                    <input asp-for="Amount" class="form-control custom-input form-control-lg big-label">
                                </div>
                                <span asp-validation-for="Amount" class="text-danger" style="margin-left:15px"></span>

                            </div>
                        </div>
                       


                      
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Create</button>

@*                             <input type="submit" value="Create" class="btn btn-block big-label" />
 *@                        </div>


                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
            <img src="/img/gallery/payment.png" class="shipment-image" alt="Shipment Image">
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.min.js" integrity="sha512-EKWWs1ZcA2ZY9lbLISPz8aGR2+L7JVYqBAYTq5AXgBkSjRSuQEGqWx8R1zAX16KdXPaCjOCaKE8MCpU0wcHlHA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
