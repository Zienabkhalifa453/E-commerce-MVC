@model RegisterVm

@{
    ViewData["Title"] = "register";
}

<h1 class="text-center">Register</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control form-control-lg" style="height: 40px;" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control form-control-lg" style="height: 40px;" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="confirmPassword" class="control-label"></label>
                <input asp-for="confirmPassword" class="form-control form-control-lg" style="height: 40px;" />
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control form-control-lg" style="height: 40px;" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emailConfirmation" class="control-label"></label>
                <input asp-for="emailConfirmation" class="form-control form-control-lg" style="height: 40px;" />
                <span asp-validation-for="emailConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control form-control-lg" style="height: 40px;" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-custom mt-3"><i class="fas fa-user-plus"></i> Create</button>
            </div>
        </form>
        <hr />
        <div class="text-center">
            <p>Or register with:</p>
            <a href="#" class="btn btn-primary btn btn-custom mt-2"><i class="fab fa-facebook-f"></i> </a>
            <a href="#" class="btn btn-danger btn btn-custom mt-2"><i class="fab fa-google"></i> </a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-custom {
        height: 35px;
    }
</style>
