
@{
    ViewData["Title"] = "RegisteredCustomers";
}
@model List<ApplicationUser>

<h1>Registered Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.UserName</td>
                <td>@customer.Email</td>
                <td>
                    <button onclick="return confirm('Are you sure you want to edit this customer?')" class="btn btn-primary">Edit</button>
                </td>
                <td>
                    
                        <button onclick="return confirm('Are you sure you want to delete this customer?')"class="btn btn-danger">Delete</button>
               
                </td>
            </tr>
        }
    </tbody>
</table>
